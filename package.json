{
  "name": "digital-cookbook-core",
  "productName": "Zero's Cookbook",
  "version": "1.0.0",
  "description": "An open-source desktop cookbook app that fetches, caches, and displays recipes from GitHub.",
  "author": "FÃ©lix Banks",
  "homepage": "https://github.com/Elyriand21/digital-cookbook-core",
  "repository": {
    "type": "git",
    "url": "https://github.com/Elyriand21/digital-cookbook-core"
  },
  "bugs": {
    "url": "https://github.com/Elyriand21/digital-cookbook-core/issues"
  },
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.zero.digitalcookbook",
    "productName": "Zero's Cookbook",
    "icon": "assets/cookbookIcon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/.cache/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": true
    }
  }

}
